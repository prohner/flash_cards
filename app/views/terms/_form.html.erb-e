<%= simple_form_for @term, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :question %>
  <%= f.input :answer %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                terms_path, :class => 'btn' %>
  </div>
<% end %>
